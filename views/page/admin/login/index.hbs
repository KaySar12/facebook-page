<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>Admin Panel Login</title>

  <!-- Google Font: Source Sans Pro -->
  <link rel="stylesheet"
    href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
  <!-- Font Awesome -->
  <link rel="stylesheet" href="../../plugins/fontawesome-free/css/all.min.css">
  <!-- icheck bootstrap -->
  <link rel="stylesheet" href="../../plugins/icheck-bootstrap/icheck-bootstrap.min.css">
  <!-- Theme style -->
  <link rel="stylesheet" href="../../dist/css/adminlte.min.css">

    <link rel="stylesheet" href="/css/app.css">
</head>

<body class="hold-transition login-page">
  <div class="login-box">
    <div class="login-logo">
      <a href="../../index2.html"><b>Login Page</b></a>
    </div>
    <!-- /.login-logo -->
    <div class="card">
      <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>
        <div class="social-auth-links text-center mb-3">
          {{!-- <a href="/admin/action/login" class="btn btn-block btn-primary">
            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
          </a> --}}
          <a href="#" onclick="facebookLogin()" class="btn btn-block btn-primary">
            <i class="fab fa-facebook mr-2"></i> Sign in using Facebook
          </a>
          <a href='/tiktok/oauth' class="btn btn-block btn-dark">
            <i class="fab fa-tiktok mr-2"></i>
            Sign in using TikTok</a>
          <a id="reddit-login-button" onclick="redditLogin()" class="btn btn-block btn-orange">
            <i class="fab fa-reddit mr-2"></i>
            Sign in using Reddit
          </a>
        </div>

      </div>
    </div>
    <!-- /.login-card-body -->
  </div>
  </div>
  <!-- /.login-box -->
  <script>
    function redditLogin() {
      const button = document.getElementById('reddit-login-button');
      button.addEventListener('click', function () {
        // Redirect to Reddit's OAuth2 authorization URL
        window.location.href = `https://www.reddit.com/api/v1/authorize?client_id=RQtqjQ7AsDc1Mkv04h08kw&response_type=code&state=RANDOM_STRING&redirect_uri=https%3A%2F%2Fviolently-distinct-trout.ngrok-free.app%2Freddit%2Faction%2Flogin&duration=permanent&scope=mysubreddits,read,submit,identity,edit,history`;
      });
    }
    function facebookLogin() {
      FB.login(function (response) {
        if (response.status === 'connected') {
          window.location.href = "/admin/action/login";
        } else {
          window.location.href = "/admin/login";
        }
      }, { scope: 'public_profile,email,pages_show_list' });
    }
  </script>
  <script>
    window.fbAsyncInit = function () {
      FB.init({
        appId: '1100983394414551',
        cookie: true,
        status: true,
        xfbml: true,
        version: 'v18.0'
      });
      FB.AppEvents.logPageView();
    };

    (function (d, s, id) {
      var js, fjs = d.getElementsByTagName(s)[0];
      if (d.getElementById(id)) { return; }
      js = d.createElement(s); js.id = id;
      js.src = "https://connect.facebook.net/en_US/sdk.js";
      fjs.parentNode.insertBefore(js, fjs);
    }(document, 'script', 'facebook-jssdk'));
  </script>
  <!-- jQuery -->
  <script src="../../plugins/jquery/jquery.min.js"></script>
  <!-- Bootstrap 4 -->
  <script src="../../plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
  <!-- AdminLTE App -->
  <script src="../../dist/js/adminlte.min.js"></script>
</body>

</html>